@model AI_Web_App.Models.ApplicationUser
@{
    ViewBag.Title = "Invite";
    
}

<h2>Invite</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Zaproś do bibliteki</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(
 model => model.UserName,
 ((IEnumerable<AI_Web_App.Models.ApplicationUser>)ViewBag.Users)
 .Select(x => new SelectListItem() { Text = x.UserName, Value = x.UserName }),
 "Select a user", htmlAttributes : new { @class="form-control", id="exampleSelect1"}
)

            </div>
        </div>

      

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>